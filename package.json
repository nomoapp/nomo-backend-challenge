{
  "name": "nomo-backend-challenge",
  "description": "API RESTful para gesti√≥n de tareas desarrollada con TypeScript, Express.js, PostgreSQL y Docker.",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run clean; nodemon | pino-pretty -c -t",
    "build": "npm run clean; npx swc ./src --out-dir dist --strip-leading-paths",
    "seed": "tsx database/seed.ts",
    "clean": "rimraf dist",
    "dev_infra:up": "docker compose -f docker-compose.yaml up -d",
    "dev_infra:down": "docker compose -f docker-compose.yaml down -v",
    "dev_infra:restart": "npm run dev_infra:down && npm run dev_infra:up"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.0",
    "@types/pg": "^8.15.5",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.0.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.7.0"
  }
